# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Admin Authentication
ADMIN_EMAIL=admin@example.com
# Use a Bcrypt hash for production security (Start with $2a$ or $2b$)
# You can generate one using an online bcrypt generator or node script
ADMIN_PASSWORD=your-secure-hashed-password

# Session Security (Required for iron-session)
# Must be at least 32 characters long
SESSION_SECRET=complex_password_at_least_32_characters_long_random_string

# Optional: Monitoring
SENTRY_DSN=
